<%- include('partials/header') -%>

<main
  class="container flex justify-center items-center min-h-screen p-11 mx-auto"
>
<!-- Login Form -->
  <div class="flex-col card w-96 glass shadow-2xl">
    <div class="card-body">
      <h2 class="card-title justify-center">LOGIN</h2>
      <section class="flex-col mx-auto mt-5">
        <% if (locals.messages.errors) { %> <% messages.errors.forEach( el => {
        %>
        <div class="alert alert-danger"><%= el.msg %></div>
        <% }) %> <% } %> <% if (locals.messages.info) { %> <%
        messages.info.forEach( el => { %>
        <div class="alert alert-info"><%= el.msg %></div>
        <% }) %> <% } %>
        <form action="/login" method="POST">
          <div class="mb-3">
            <label for="exampleInputEmail1" class="flex justify-center"
              >Email address</label
            >
            <input
              type="email"
              placeholder="example@email.com"
              class="form-control input input-bordered input-success w-full max-w-xs"
              id="exampleInputEmail1"
              aria-describedby="emailHelp"
              name="email"
            />
          </div>
          <div class="mb-3">
            <label for="exampleInputPassword1" class="flex justify-center"
              >Password</label
            >
            <input
              type="password"
              placeholder="password"
              class="form-control input input-bordered input-success w-full max-w-xs"
              id="exampleInputPassword1"
              name="password"
            />
          </div>
          <div class="flex justify-center">
            <button type="submit" class="btn btn-info">Login</button>
          </div>
        </form>
        <p class="mt-5 text-center">
          Don't have an account?
          <a href="/signup" class="text-sky-400">Signup</a>
        </p>
      </section>
    </div>
  </div>
</main>

<%- include('partials/footer') -%>
