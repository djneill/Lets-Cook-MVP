<%- include('partials/header') -%>

<div class="container flex justify-center items-center min-h-full mx-auto p-5">
  <div class="flex flex-col min-w-full lg:flex-row">
    <div class="grid flex-grow card rounded-box items-start w-full lg:w-1/2 mx-auto">
      <div class="card bg-zinc-200 text-neutral-content shadow-2xl">
        <div class="card-body items-center text-center">
          <h2 class="card-title text-black"><%= post.title %></h2>
          <img class="rounded" src="<%= post.image%>" />
          <div class="flex justify-content-between">
            <form
              class="col-1"
              action="/post/likePost/<%= post.id %>?_method=PUT"
              method="POST"
            >
              <button class="text-left btn btn-primary fa fa-heart" type="submit"></button>
            </form>
            <h3 class="">Likes: <%= post.likes %></h3>
            <%if(post.user == user.id){ %>
            <form
              action="/post/deletePost/<%= post.id %>?_method=DELETE"
              method="POST"
              class="col-3"
            >
              <button class="btn btn-primary fa fa-trash" type="submit"></button>
            </form>
            <%}%>
          </div>
          <div class="mt-5">
            <h2>Add a comment</h2>
            <form action="/comment/createComment/<%=post._id%>" method="POST">
              <div class="mb-3">
                  <label for="comment" class="form-label">Comment</label>
                  <input type="text" class="form-control" id="comment" name="comment">
              </div>
              <button type="submit" class="btn btn-primary">Submit</button>
            </form>
          </div>
          <ul>
            <% for(var i=0; i<comment.length; i++) {%>
              <li class="col-6 justify-content-between mt-5">
                <%= comment[i].comment %>
              </li>
            <% } %>
          </ul>
          <div class="col-6 mt-5">
            <a class="btn btn-primary" href="/profile">Return to Profile</a>
            <a class="btn btn-primary" href="/feed">Return to Feed</a>
          </div>
        </div>
      </div>
    </div>

    <div class="divider lg:divider-horizontal">
      <span class="material-symbols-outlined md-60">
        outdoor_grill
      </span>
    </div>

    <div class="grid flex-grow card rounded-box place-items-center w-full lg:w-1/2 mx-auto max-h-[550px] overflow-y-auto">
      <div class="card bg-zinc-200 text-neutral-content shadow-2xl">
        <div class="card-body items-center text-center">
          <h2 class="card-title text-black">Your Recipes</h2>
          
        </div>
      </div>
    </div>
  </div>
</div>

<!-- original post page  -->
<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-6">
      <h2><%= post.title %></h2>
      <img class="img-fluid" src="<%= post.image%>" />
