<%- include('partials/header') -%>

  <main>
    <div class="container mx-auto p-5">
      <p class="m-2"><strong>User Name</strong>: <%= user.userName %>
      </p>
      <!-- <p class="m-2"><strong>Email</strong>: <%= user.email %></p> -->
      <a href="/logout" class="btn btn-active btn-error m-2">Logout</a>
    </div>

    <div class="container flex justify-center items-center min-h-full mx-auto p-5">
      <div class="flex flex-col min-w-full lg:flex-row">
        <div class="grid flex-grow card rounded-box items-start w-full lg:w-1/2 mx-auto">
          <div class="card bg-zinc-200 text-neutral-content shadow-2xl">
            <div class="card-body items-center text-center">
              <h2 class="card-title text-black">Add A Recipe</h2>
              <form action="/post/createPost" enctype="multipart/form-data" method="POST">
                <div class="mb-3">
                  <label for="title" class="form-label text-black">Title</label>
                  <input type="text"
                    class="form-control text-black input input-bordered input-primary w-full max-w-xs sm:max-w-full"
                    id="title" name="title">
                </div>
                <div class="mb-3">
                  <label for="caption" class="form-label text-black">Ingredients</label>
                  <textarea
                    class="form-control text-black input input-bordered input-primary w-full max-w-xs sm:max-w-full"
                    id="ingredients" name="ingredients"></textarea>
                </div>
                <div class="mb-3">
                  <label for="caption" class="form-label text-black">Direction</label>
                  <textarea
                    class="form-control text-black input input-bordered input-primary w-full max-w-xs sm:max-w-full"
                    id="directions" name="directions"></textarea>
                </div>
                <div class="mb-3">
                  <label for="imgUpload" class="form-label text-black w-full">Image</label>
                  <input type="file" class="form-control text-black w-full" id="imageUpload" name="file" />
                </div>
                <button type="submit" class="btn btn-primary" value="Upload">Submit</button>
              </form>
              <div class="row justify-content-center mt-5">
                <a class="btn btn-primary" href="/feed">Return to Feed</a>
              </div>
            </div>
          </div>
        </div>

        <div class="divider lg:divider-horizontal">
          <span class="material-symbols-outlined md-60">
            outdoor_grill
          </span>
        </div>

        <div
          class="grid flex-grow card rounded-box place-items-center w-full lg:w-1/2 mx-auto max-h-[550px] overflow-y-auto">
          <div class="card bg-zinc-200 text-neutral-content shadow-2xl">
            <div class="card-body items-center text-center">
              <h2 class="card-title text-black">Your Recipes</h2>
              <ul class="row list-unstyled">
                <% var sortedPosts=posts.sort((a, b)=> a.title.localeCompare(b.title)); %>

                  <% for(var i=0; i<sortedPosts.length; i++) {%>
                    <li class="col-6 justify-between mt-5">
                      <h1 class="text-black mb-2">
                        <%= sortedPosts[i].title %>
                      </h1>
                      <a href="/post/<%= sortedPosts[i]._id%>">
                        <img class="w-full" src="<%= sortedPosts[i].image%>">
                      </a>
                    </li>
                    <% } %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>

  </main>

  <%- include('partials/footer') -%>